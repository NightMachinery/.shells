[alias]
	co = checkout
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[push]
	default = matching
[core]
	excludesfile = ~/.gitignore_global
	longpaths = true
	autocrlf = input

	# GIT_PAGER also set, so @redundant
	pager = LESS='-RiF --mouse --wheel-lines=3' delta --light --theme 'Solarized (light)'
	eol = lf
	# ignorecase = false
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[http]
	sslVerify = true
	# proxy = http://127.0.0.1:2089
	proxy = http://127.0.0.1:1087
	# proxy = socks5h://127.0.0.1:1081 # incompatible with git-credential-manager-core
[pull]
	rebase = false
[difftool]
	prompt = false
	# trustExitCode = true
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
	# submodule = diff
	# submodules don't work :(
[difftool "kitty.gui"]
	cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[receive]
	denyCurrentBranch = updateInstead
# [url "ssh://git@github.com/"]
# 	insteadOf = https://github.com/
# [url "ssh://git@bitbucket.org/"]
# 	insteadOf = https://bitbucket.org/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = master
[commit]
	gpgSign = true
[credential] # @darwinOnly
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
	# trace = /Users/evar/tmp/gcm.log
[credential "https://dev.azure.com"]
	useHttpPath = true
[credential "https://github.com"]
	NightMachinery = NightMachinery
	username = NightMachinery
[credential "https://git.overleaf.com"]
	provider = generic
