#!/usr/bin/env dash

# BLACKBUTLER_API_ROOT='http://localhost:9000/api'
endpoint="${BLACKBUTLER_API_ROOT:-http://127.0.0.1:${BLACKBUTLER_PORT:-7260}}/say/"

stdin="$(cat)"

req="$(printf -- "%s " "$stdin" | jq --raw-input --slurp --null-input --compact-output 'inputs as $i | {"text": $i}')"
printf -- "%s" "$req" | curl --fail --location --header "Content-Type: application/json" --request POST --data '@-' $endpoint
